#!/usr/bin/python
import sys
import argparse

from eyes_on_me import lights


def tune_lights():
    lights.tune_lights()


def parse_args():
    parser = argparse.ArgumentParser(description="saving your eyes by adjusting the backlight and wb")
    parser.add_argument("--daemon", help="daemonize the process of adjusting")
    return parser.parse_args(sys.argv)


def main():
    # parse args
    args = parse_args()
    if args.daemon:
        daemon()
    else:
        tune_lights()


if __name __ == '__main__':
    main()
